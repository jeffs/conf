[alias]
	br           = branch
	ci           = commit
	co           = checkout --recurse-submodules
	di           = diff
	st           = status
	flog         = log --first-parent --oneline
	glog         = log --first-parent --oneline --graph
	push-f       = push -f
	spliff       = difftool -y
	re           = remote
	root         = rev-parse --show-toplevel
	exec         = "!exec "
	ci-no-verify = commit --no-verify
	up           = "!exec grit up"
	si           = "!exec grit si"
[color]
	ui = true
[core]
	excludesfile   = ~/conf/etc/gitexcludes
	attributesfile = ~/conf/etc/gitattributes
[diff]
	# https://github.blog/2016-06-13-git-2-9-has-been-released/#beautiful-diffs
	compactionHeuristic = true
	extern = difft
	tool = difftastic
[difftool]
	prompt = false
[difftool "difftastic"]
	cmd = difft --display=side-by-side $LOCAL $REMOTE
[grep]
	extendRegexp = true
[pager]
	difftool = true
[pull]
	ff = only
[push]
	default = simple
	autoSetupRemote = true
[user]
	name  = Jeff Schwab
	email = jeff@unbuggy.com
[init]
	defaultBranch = main

# Munge URLs automatically to save typing.
#
# url.insteadOf may also be useful for working around tools that insist
# on passing https URLs to private URLs when only ssh access is properly
# configured. In the specific case of the Go language (go get, go list, etc.),
# the GOPRIVATE environment variable may work better:
#
# ```nushell
# load-env { GOPRIVATE: 'github.com/fireflyprotocol/*' }
# ```
#
# # See also
#
# * <https://stackoverflow.com/a/76114722/3116635>.
# * <https://graphite.dev/guides/git-config-insteadof>
[url "git@github.com:"]
	insteadOf = "gh:"
