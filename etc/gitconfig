[alias]
	bl     = branch --list '[^_]*'
	br     = branch
	ci     = commit
	co     = checkout
	di     = diff
	st     = status
	flog   = log --first-parent --oneline
	glog   = log --first-parent --oneline --graph
	push-f = push -f
	spliff = difftool -y
	root = rev-parse --show-toplevel
	exec = "!exec "
	si    = "!function f { git log --first-parent --oneline ${1:-main}..; }; f"
	since = "!function f { git log --first-parent --oneline ${1:-main}..; }; f"
	f-the-police = commit --no-verify
[color]
	ui = true
[core]
	excludesfile = ~/conf/etc/gitexcludes
	attributesfile = ~/conf/etc/gitattributes
[diff]
	# https://github.blog/2016-06-13-git-2-9-has-been-released/#beautiful-diffs
	compactionHeuristic = true
[grep]
	extendRegexp = true
[pull]
	ff = only
[push]
	default = simple
	autoSetupRemote = true
[user]
	name = Jeff Schwab
	email = jeff@unbuggy.com
[init]
	defaultBranch = main
